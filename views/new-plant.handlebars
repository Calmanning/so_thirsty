<div class="grid-container grid-containter-padded">
    <form action="/api/plant" method="Post">

        <div class="grid-x grid-margin-x align-center">
            <div class="cell large-3 medium-12">
                <input class="new" id="nickname" name="nickname" placeholder="nickname" required></input><br>
                <input class="search new" id="commonName" name="commonName" placeholder="commoname"></input><br>
                <input class="new" id="scientificName" name="scientificName" placeholder="scientific name"></input><br>
                <input class="new" id="waterFreq" name="waterFrequency" placeholder="water frequency"
                    required></input><br>
                <textarea class="new" id="notes" name="notes" placeholder="notes"></textarea><br>
                <input class="new" id="trefleId" name="trefleId" type="hidden"></input>
                <input class="new" id="treflePhoto" name="treflePhoto" type="hidden"></input>
                <button id="addBtn" type="Submit" class="btn new">Add a plant!</button>

            </div>

            <div class="cell medium-9 small-12">
                <input class="new" id="searchBox" placeholder="Enter Your Search">


                <button id="searchBtn" class="btn">Search for a plant!</button>
                <button id="clearBtn" class="btn">Clear Search</button>
                <div class="scroll" id="resultsBox">

                </div>
            </div>
    </form>

</div>