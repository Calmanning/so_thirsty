<h1>Hello {{{name}}}!</h1>





<div class="grid-container grid-container-margin">
  <div class="grid-y grid-y-margin grid-button-list">
    <div class="btn-group">
      <button>Sonny{{dataValues.nickname}}</button>
    </div>
  </div>




  <div class="grid-y grid-y-margin">
    <div class="grid-x grid-x-margin">
      <div class="cell small-2 medium-3">
        {{#each Plants}}
        <a href="/{{../userName}}/plant/{{{dataValues.id}}}">
          <h4><strong>{{dataValues.nickname}}</strong></h4>
        </a>
        <div class="card-section">
          <h3>Photos</h3>
          <a href="/{{../userName}}/plant/{{{dataValues.id}}}">
            {{#if Photos}}
            {{#Photos.[0]}}
            <img src={{dataValues.url}} {{#if ../dataValues.isWatered}}class="img is-watered"
              {{else}}class="img not-watered" {{/if}}>
            {{/Photos.[0]}}
            {{else}}
            <img src="/assets/images/Potted Plant1.jpg" {{#if ../dataValues.isWatered}}class="img is-watered"
              {{else}}class="img not-watered" {{/if}}>
            {{/if}}
          </a>
        </div>
        <div class="card-section">
          <button class="wateredBtn btn" value={{dataValues.id}}>Just watered!</button>
          <button class="removeBtn btn" value={{dataValues.id}}>Remove Plant</button>
        </div>
{{/each}}
      </div>
    </div>
  </div>
</div>

<hr>
<h3>Caretakers</h3>
<a href="/invite">Invite a caretaker</a>
<ul>
  {{#each Caretakers}}
  <li>
    {{dataValues.name}} - <button class="deleteCaretaker btn" value={{dataValues.id}}>Remove Caretaker</button>
  </li>
  {{/each}}
</ul>




