{{>navbar}}

<h1>Hello {{{name}}}!</h1>

<div class="grid-container grid-container-margin">
  <div class="grid-x grid-x-margin">
    <div class="grid-y">
      <div class="cell medium-3">
        {{#each Plants}}
        {{>plant-button this}}
        {{/each}}
      </div>
    </div>

    <div class="cell medium-9">
      <div class="grid-container grid-container-margin">
        <div class="grid-x grid-x-margin">
          {{#each Plants}}
          {{>plant-block this}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>


<hr>

<div class="grid-container grid-container-margin">

  <h3>Caretakers</h3>
  <ul>
    {{#each Caretakers}}
    <li>
      {{dataValues.name}} - <button class="deleteCaretaker btn" value={{dataValues.id}}>Remove</button>
    </li>
    {{/each}}
  </ul>

  <a href="/invite"><button class="btn">Invite a Caretaker</button></a>
</div>